{
  "extends": "../../tsconfig.base.json",
  "include": [
    "src",
    "types",
    "vitest.config.ts",
    "vitest.setup.ts",
    "../common/types"
  ],
  "compilerOptions": {
    "noEmit": true,
    "types": [
      "vi-fetch/matchers",
      "vitest/globals",
      "vitest-axe/extend-expect"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "goToDefinition": true,
          "rendererOptions": {
            "sass": {
              "loadPaths": [
                "node_modules",
                "../../node_modules"
              ]
            }
          }
        }
      }
    ]
  }
}
